<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawer"
    android:layout_height="match_parent"
    tools:context=".UploadActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="368dp"
            android:layout_height="495dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <ImageView
                android:id="@+id/image_view_show"
                android:layout_width="match_parent"
                android:layout_height="195dp"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp" />

            <TextView
                android:id="@+id/name_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="14dp"
                android:layout_marginTop="207dp"
                android:fontFamily="sans-serif-condensed"
                android:text="TextView"
                android:textSize="70px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/price_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/name_show"
                android:layout_below="@+id/name_show"
                android:text="TextView" />

            <Button
                android:id="@+id/bid_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="17dp"
                android:text="Bid" />

            <TextView
                android:id="@+id/highest_bid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/name_show"
                android:layout_below="@+id/price_show"
                android:text="Highest BID:  " />

            <TextView
                android:id="@+id/text_view_bid_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/price_show"
                android:layout_toEndOf="@+id/highest_bid"
                android:text="TextView" />

            <TextView
                android:id="@+id/textViewDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/name_show"
                android:layout_below="@+id/highest_bid"
                android:text="TextView" />

        </RelativeLayout>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/navigation_view"
        app:menu="@menu/nav_menu">

    </android.support.design.widget.NavigationView>



</android.support.v4.widget.DrawerLayout>